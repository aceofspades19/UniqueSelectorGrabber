{

  "manifest_version": 2,
  "name": "UniqueSelectorGrabber",
  "version": "1.0",

  "description": "Get a unique selector by right clicking",
  
  "background": {
    "scripts": ["uniqueselectorgrabber.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["script.js"]
    }
  ],

 "permissions": [
    "activeTab",
    "contextMenus"
  ]

}